@model UsersAndRolesDemo.Models.ForgotPasswordVM

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Forgot Password</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <span>@Html.Raw(ViewBag.EmailMessage)</span>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="g-recaptcha inp50" data-sitekey="6LeqchYUAAAAAKUy1co7TYwIZPN5vA2svV-r8JfB"></div>
                <span class="text-danger">@Html.Raw(ViewBag.CaptchaResponse)</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
