@model IEnumerable<UsersAndRolesDemo.Property>

@{
    ViewBag.Title = "Properties";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Properties</h2>
@{ 

    if (Request.IsAuthenticated && User.IsInRole("Admin")) {
        @Html.ActionLink("Create New", "Create")
    }

}
<table class="table">


@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.propertyType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numBedrooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numWashrooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.kitchen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.baseRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.builtYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.smokingAllowed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.maxNumberGuests)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.availableDates)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dimensions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
        @{

            if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })@Html.Raw(" | ");
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
         }
        </td>
    </tr>
}

</table>
