@model IEnumerable<UsersAndRolesDemo.Property>

@{
    ViewBag.Title = "Properties";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="panel panel-default">
    <div class="panel-body">
        <h2>Properties</h2>
    </div>
</div>
        @{

            if (Request.IsAuthenticated && User.IsInRole("Admin"))
            {
                @Html.ActionLink("Create New", "Create")
            }

        }
<div class="row">
@foreach (var item in Model)
{
    <div class="col-xs-12 col-md-4">
        <div class="thumbnail">
            <a href="@Url.Action("Details", new { id = item.Id })">
                <img src="@Url.Content(item.PropertyImages.FirstOrDefault().main)" alt="cabin">
            </a>
            <div class="caption">
                <h3>@Html.DisplayFor(modelItem => item.title)</h3>
                <div class="row">
                    <div class="col-xs-4 col-md-4">Dimensions</div>
                    <div class="col-xs-8 col-md-8">@Html.DisplayFor(modelItem => item.dimensions)</div>
                </div>
                <div class="row">
                    <div class="col-xs-4 col-md-4">
                        Rooms
                    </div>
                    <div class="col-xs-8 col-md-8">
                        @Html.DisplayFor(modelItem => item.numBedrooms) Bedrooms<br />@Html.DisplayFor(modelItem => item.numWashrooms) Bethrooms<br />Max Occupancy @Html.DisplayFor(modelItem => item.maxNumberGuests)
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-4 col-md-4">
                        Price
                    </div>
                    <div class="col-xs-8 col-md-8">
                        $@Html.DisplayFor(modelItem => item.baseRate)
                    </div>
                </div>
            </div>
        </div>
    </div>
}
</div>
