@model IEnumerable<UsersAndRolesDemo.Property>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
@*<h2>Index</h2>*@
<div id="titleContainer">
    <div id="titleDiv">
        <img id="logoTitle" src="~/Content/Images/STSC.jpg" />
    </div>
</div>
@foreach (var item in Model) {
    <div class="row">
        <div class="col-xs-12 col-sm-4">
            <div class="clearfix">
                <a href='@Url.Action("AlpineMeadows", "Home")'>
                    <img src='@Url.Content("~/Images/cabin.jpg")' alt="cabin" class="pull-left img-responsive">
                </a>
                <table class="table">
                    <tr>
                        <th colspan="2">Alpine Meadows Cabin Lot</th>
                    </tr>
                    <tr>
                        <td>Dimensions</td>
                        <td>@Html.DisplayFor(modelItem => item.dimensions)</td>
                    </tr>
                    <tr>
                        <td>Rooms</td>
                        <td>@Html.DisplayFor(modelItem => item.numBedrooms) Bedrooms, @Html.DisplayFor(modelItem => item.numWashrooms) Bathroom, Max Occupancy @Html.DisplayFor(modelItem => item.maxNumberGuests)</td>
                    </tr>
                    <tr>
                        <td>Price</td>
                        <td>$@Html.DisplayFor(modelItem => item.baseRate)/ Day</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

            //@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            //@Html.ActionLink("Delete", "Delete", new { id=item.Id })

}


