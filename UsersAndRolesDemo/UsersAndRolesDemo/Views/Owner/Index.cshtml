@model IEnumerable<UsersAndRolesDemo.Property>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Index @ViewBag.Username</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Property Type
        </th>
        <th>
            Bedrooms
        </th>
        <th>
            Washrooms
        </th>
        <th>
            Base Rate
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.propertyType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numBedrooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numWashrooms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.baseRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
